{
  "name": "git-auto-commit-generator",
  "displayName": "git-auto-commit-generator",
  "publisher": "deviprasadrai",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "git-auto-commit-generator.generateCommitMessage",
        "title": "Generate Commit Message (Gemini)",
        "icon": "$(robot)"
      }
    ],
    "menus": {
      "scm/title": [
        {
          "command": "git-auto-commit-generator.generateCommitMessage",
          "when": "scmProvider == git",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Auto Commit Generator",
      "properties": {
        "gitCommitGenerator.apiKey": {
          "type": "string",
          "default": "",
          "description": "AIzaSyBgQojWjYZTZKIKTmh6N8MxGK8tQBm-R6k"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1"
  }
}
